extends ../layout

block content
  h1.text-center Gestaltung
  p.lead.text-center An intuitive interface for self-tracking data.
  form.form-horizontal(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    .form-group
      .col-sm-offset-4.col-sm-4
        input.form-control(type='email', name='email', id='email', placeholder='Email', autofocus=true)
    .form-group
      .col-sm-offset-4.col-sm-4
        input.form-control(type='password', name='password', id='password', placeholder='Password')
    .form-group
      .col-sm-offset-4.col-sm-4
        button.col-sm-3.btn.btn-primary(type='submit')
          i.fa.fa-user
          | Login
        a.btn.btn-link(href='/forgot') Forgot your password?
    .form-group
      .col-sm-offset-4.col-sm-4
        hr
    .form-group
      .col-sm-offset-4.col-sm-4
        a.btn.btn-block.btn-facebook.btn-social(href='/auth/facebook')
          i.fa.fa-facebook
          | Sign in with Facebook