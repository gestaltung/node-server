extends layout

block content
  if user
    include partials/header
  .row.full-bleed#homepage
    .title
      h1 Gestaltung.
    .copy
      p A framework for the physicalization of personal data.
    if user
      .login-options.text-center
        .col-sm-3
          a.btn(href="/dashboard")
            h2 Dashboard
        .col-sm-3
          a.btn(href="/link")
            h2 Link Apps
        .col-sm-3
          a.btn(href="/account")
            h2 Account

    else
      .login-options.text-center
        .col-sm-offset-3.col-sm-3
          a.btn(href="/login")
            h2 Log In 
        .col-sm-3
          a.btn(href="/signup")
            h2 Sign Up 